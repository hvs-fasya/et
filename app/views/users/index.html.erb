<div class="clearfix">
  <h1 class="inline">Users List</h1>
  <%= link_to fa_icon("plus 3x"), new_user_path(), :class => "btn btn-primary inline pull-right" %>
</div>
<br>
<p class="lead">
  hier sind unsere wertvollen Nutzer
</p>
<table class='table table-striped'>
  <tr>
    <th class="table-digits th-5">#</th>
    <th class="th-5"></th>
    <th>Name</th>
    <th class="th-20">E-mail</th>
    <th class="th-20">Contacts</th>
    <th class="th-5"></th>
  </tr>
  <tbody>
<% @users.each_with_index do |user,i| %>
<br>
  <tr>
    <td class="table-digits"><%= i+1 %></td>
    <%= render partial: "user_row", locals: {user: user} %>
  </tr>
<% end %>
</tbody>
</table>